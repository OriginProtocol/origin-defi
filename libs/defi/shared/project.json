{
  "name": "defi-shared",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/defi/shared/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "codegen-graphql": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm graphql-codegen --config 'libs/defi/shared/codegen.ts'"
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/defi/shared/**/*.{ts,tsx,js,jsx}"]
      }
    }
  }
}
