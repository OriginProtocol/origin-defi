{
  "name": "ledger",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/ledger/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/ledger"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "ledger:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "ledger:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "ledger:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "ledger:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "ledger:build:development"
        },
        "production": {
          "buildTarget": "ledger:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "i18n-extract": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm formatjs extract '{apps/ledger,libs/ledger,libs/shared}/**/!(*.d).{ts,tsx}' --out-file apps/ledger/src/lang/extracts/en.json --flatten --id-interpolation-pattern '[sha512:contenthash:base64:6]'"
      }
    },
    "i18n-compile": {
      "executor": "nx:run-commands",
      "dependsOn": ["i18n-extract"],
      "options": {
        "command": "pnpm formatjs compile-folder --ast apps/ledger/src/lang/extracts apps/ledger/src/lang"
      }
    }
  }
}
